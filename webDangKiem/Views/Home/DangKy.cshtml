@model webDangKiem.Models.LichDangKiemView
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/layout/NavbarFooter.cshtml";
}
<h3 class="mt-5">&nbsp</h3>
<figure class="text-center mt-5">
    <figcaption class="blockquote-footer">
        <h2 class="text-dark fst-italic" title="Source Title">@ViewBag.Message</h2>
    </figcaption>
</figure>
<div class="container align-items-center justify-content-center mt-5">
    @using (Html.BeginForm("DangKy", "Home", FormMethod.Post))
    {

        <div class="form-group justify-content-center row mt-5">

            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">CMND</label>
            <div class="col-xs-6">
                @*<h6 class="text-muted">Tối đa 12 chữ số(VÍ DỤ: 012345679012)</h6>*@
                @Html.TextBoxFor(model => model.cccd, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cccd, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group justify-content-center row mt-5">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Họ và tên chủ xe</label>
            <div class="col-xs-6">
                @*<h6 class="text-muted">Chỉ nhập chữ (VÍ DỤ: NGUYỄN VĂN A)</h6>*@
                @Html.TextBoxFor(model => model.hoVaten, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.hoVaten, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group justify-content-center row mt-5">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Số điện thoại</label>
            <div class="col-xs-6">
                @*<h6 class="text-muted">Tối đa 10 chữ số(VÍ DỤ: 0999999999)</h6>*@
                @Html.TextBoxFor(model => model.soDT, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.soDT, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group justify-content-center row mt-5">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Email</label>
            <div class="col-xs-6">
                @*<h6 class="text-muted">Nhập đúng định dạng email(VÍ DỤ: ...@gmail.com)</h6>*@
                @Html.TextBoxFor(model => model.email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group justify-content-center row mt-5">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Biển số xe</label>
            <div class="col-xs-6">
                @Html.TextBoxFor(model => model.bienSoxe, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.bienSoxe, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group justify-content-center row mt-5">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Ngày hết hạn đăng kiểm</label>
            <div class="col-xs-6">
                @Html.TextBoxFor(model => model.ngayHethan, new { @class = "form-control", @type = "date" })
                @Html.ValidationMessageFor(model => model.ngayHethan, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group justify-content-center row mt-5">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Màu biển số</label>
            <div class="col-xs-6">
                @Html.RadioButtonFor(model => model.loaiBien, 1, new { htmlAttributes = new { @class = "form-control" } }) <span class="text-warning fw-bold">Vàng</span>
                @Html.RadioButtonFor(model => model.loaiBien, 0, new { htmlAttributes = new { @class = "form-control" } }) <span class="text-dark fw-bold">Trắng</span>
            </div>
        </div>
        <div class="form-group justify-content-center row mt-5">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Loại Xe</label>
            <div class="col-xs-6">
                @Html.DropDownListFor(model => model.loaiXe, (IEnumerable<SelectListItem>)ViewBag.loaiXe, "Chọn loại xe", new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>
        <div class="form-group justify-content-center row mt-5">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Khu vực</label>
            <div class="col-xs-6">
                @Html.DropDownListFor(model => model.maTT, (IEnumerable<SelectListItem>)ViewBag.KhuVuc, null, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>
        <div class="form-group justify-content-center row mt-5">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Ngày Đăng Kiểm</label>
            <div class="col-xs-6">
                @Html.TextBoxFor(model => model.ngayDangkiem, new { @class = "form-control", @type = "date" })
                @Html.ValidationMessageFor(model => model.ngayDangkiem, "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="ms-5 form-group justify-content-center row mt-5">
            <div class="col-xs-6">
                <button type="submit" class="btn btn-primary btn-lg">ĐĂNG KÝ</button>
            </div>
        </div>
    }
    @*Đăng ký thành công*@
    @if (TempData["Successmsg"] != null)
    {
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">@TempData["Successmsg"].ToString()</h4>
            <hr>
            <p class="mb-0">Có thể tra cứu lịch đã đăng ký bằng cccd ở mục tra cứu --><small><a href="/Home/HuongDanTraCuu">Hướng dẫn tra cứu</a></small></p>
        </div>
    }

    @*Đăng ký không thành công*@
    @if (TempData["Errormsg"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">@TempData["Errormsg"].ToString()</h4>
            <hr>
            <p class="mb-0">Vui Lòng kiểm tra lại thông tin hoặc xem lại cách đăng ký lịch --><small><a href="/Home/HuongDanDangKy">Hướng dẫn Đăng ký lịch</a></small></p>
        </div>
    }
</div>

