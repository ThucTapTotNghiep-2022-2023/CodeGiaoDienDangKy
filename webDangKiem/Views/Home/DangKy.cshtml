
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/layout/NavbarFooter.cshtml";
}
<h3 class="mt-5">&nbsp</h3>
<figure class="text-center mt-5">
    <figcaption class="blockquote-footer">
        <h2 class="text-dark fst-italic" title="Source Title">@ViewBag.Message</h2>
    </figcaption>
</figure>
<div class="container align-items-center justify-content-center mt-5">
    @using (Html.BeginForm("DangKy", "Home"))
    {
        SelectList TinhThanh = (SelectList)ViewBag.TinhThanhPho;
        SelectList lx = (SelectList)ViewBag.LoaiXe;
        <div class="form-group row mt-2">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Họ và tên chủ xe</label>
            <div class="col-xs-6">
                @Html.TextBox("txtHoten", "", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Số điện thoại</label>
            <div class="col-xs-6">
                <input class="form-control" type="number" value="Artisanal kale" id="example-text-input">
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Email</label>
            <div class="col-xs-6">
                @Html.TextBox("txtEmail", "", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Biển số xe</label>
            <div class="col-xs-6">
                <input class="form-control" type="number" value="Artisanal kale" id="example-text-input">
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Ngày hết hạn đăng kiểm</label>
            <div class="col-xs-6">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Màu biển số</label>
            <div class="col-xs-6">
                @Html.RadioButton("MauBienSo", 0, true) <span class="text-warning fw-bold">Vàng</span>
                @Html.RadioButton("MauBienSo", 0, true) <span class="text-dark fw-bold">Trắng</span>
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Loại Xe</label>
            <div class="col-xs-6">
                @Html.DropDownList("LoaiXe", lx, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Tỉnh thành phố</label>
            <div class="col-xs-6">
                @Html.DropDownList("LoaiXe", TinhThanh, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="example-text-input" class="col-2 col-form-label fw-bold fst-italic">Ngày Đăng Kiểm</label>
            <div class="col-xs-6">
                <div class='input-group date' id='datetimepicker2'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group row mt-2">
            <div class="col-xs-6">
                <button type="button" class="btn btn-primary btn-lg">Xác Nhận</button>
            </div>
        </div>
     }
</div>
